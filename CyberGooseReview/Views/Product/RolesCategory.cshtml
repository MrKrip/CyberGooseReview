@model List<CheckElementModel>

<form method="post" asp-area="" asp-controller="Product" asp-action="RolesCategory" asp-route-id="@ViewBag.Id">
    <div class="card">
        <div class="card-header">
            <h2>Manage Category Roles</h2>
            Add/Remove Roles for Category  @ViewBag.Category.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id" />
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].Name
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-controller="Product" asp-action="Categories" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>