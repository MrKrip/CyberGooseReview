@model UserRegistrationModel

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                        <form method="post" asp-controller="User" asp-action="Register">

                            <div class="form-outline mb-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" asp-for="UserNick">Your Name</label>
                                <input asp-for="UserNick" class="form-control form-control-lg" />
                                <span asp-validation-for="UserNick" />
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" asp-for="Email">Your Email</label>
                                <input asp-for="Email" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" />
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" asp-for="PasswordHash">Password</label>
                                <input asp-for="PasswordHash" class="form-control form-control-lg" />
                                <span asp-validation-for="PasswordHash" />
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" asp-for="ConfirmPassword">Repeat your password</label>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                <span asp-validation-for="ConfirmPassword" />
                            </div>

                            <div class="d-flex justify-content-center">
                                <button type="submit"
                                        class="btn btn-primary btn-block btn-lg ">
                                    Register
                                </button>
                            </div>

                            <p class="text-center text-muted mt-5 mb-0">
                                Have already an account? <a asp-area="" asp-action="Login" asp-controller="User"
                                                            class="fw-bold text-body"><u>Login here</u></a>
                            </p>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>